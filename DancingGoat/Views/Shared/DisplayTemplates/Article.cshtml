@model DancingGoat.Models.Article

<div class="col-md-3" data-kontent-item-id="@Model.System.Id">
    <div class="article-tile">
        <a asp-controller="Articles" asp-action="Show" asp-route-urlSlug="@Model.UrlPattern" data-kontent-element-codename="@Article.TeaserImageCodename">
            <img-asset asset="@Model.TeaserImage.First()" class="article-tile-image" default-width="300" title="Article @Model.Title">
                <media-condition min-width="330" max-width="768" image-width="468" />
            </img-asset>
        </a>
        <div class="article-tile-date" data-kontent-element-codename="@Article.PostDateCodename">
            @Model.PostDate?.ToString("M")
        </div>
        <div class="article-tile-content">
            <h2 class="h4" data-kontent-element-codename="@Article.TitleCodename">
                <a asp-controller="Articles" asp-action="Show" asp-route-urlSlug="@Model.UrlPattern">@Model.Title</a>
            </h2>
            <p class="article-tile-text" data-kontent-element-codename="@Article.SummaryCodename">
                @Html.DisplayFor(vm => vm.Summary)
            </p>
        </div>
    </div>
</div>